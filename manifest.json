{
  "manifest_version": 2,
  "name": "Amazon Transaction Extractor",
  "version": "1.0.0",
  "description": "Adds filtering and preview features to Amazon payment transactions page",
  "author": "Oliver Garwil",
  "homepage_url": "https://github.com/oliverseal/amazon-transaction-extractor",

  "permissions": [
    "activeTab",
    "https://www.amazon.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/cpe/yourpayments/transactions*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "popup.html",
    "popup.js",
    "popup.css"
  ]
}
